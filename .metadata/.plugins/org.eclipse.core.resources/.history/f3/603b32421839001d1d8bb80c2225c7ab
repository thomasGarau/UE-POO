package attelier7;

import java.util.concurrent.ThreadLocalRandom;

public class DesPiper extends Des {
	private int borne;
	
	public DesPiper(String name, int nb_faces, int borne) {
		super(nb_faces,name);
		this.name = name; 
		this.nb_faces = nb_faces;
		this.borne = borne;
	}
	
	public int lancer() {
		int a = ThreadLocalRandom.current().nextInt(1, this.nb_faces +1);
		while (a < this.borne) {
			a = ThreadLocalRandom.current().nextInt(1, this.nb_faces +1);
		}
		return a;
	}
	
	public int lancer(int nb_lancer) {
		int i = 0;
		int a = 0;
		int max = 0;
		while (i < nb_lancer && a < this.borne) {
			a = ThreadLocalRandom.current().nextInt(1, this.nb_faces +1);
			if(a > max) {
				max = a;
			}
		i++;
		}
		return max;
	}
}
