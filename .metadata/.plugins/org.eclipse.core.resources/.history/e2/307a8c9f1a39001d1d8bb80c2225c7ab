package attelier7;

public class DesMemoire extends Des {
	private int dernierLancer;
	
	public DesMemoire(int nb_faces, String name) {
		super(nb_faces,name);
		if(nb_faces < 3){
			this.nb_faces = 3;
		}else if(nb_faces >120){
			this.nb_faces = 120;
		}else {
			this.nb_faces = nb_faces;
		}
		if(name != null && name != "" ) {
			this.name = name;
		}else {
			this.name = "Des" + nbrDes;
		}
		this.dernierLancer = dernierLancer;
		nbrDes ++;
	}
}
